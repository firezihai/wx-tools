{
    "name": "firezihai/wx-tools",
    "type": "library",
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.50",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Firezihai\\WxTools\\": "src/"
        }
    },
    "authors": [
        {
            "name": "firezihai",
            "email": "firezihai@163.com"
        }
